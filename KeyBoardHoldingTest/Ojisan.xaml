<UserControl x:Class="KeyBoardHoldingTest.Ojisan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KeyBoardHoldingTest"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50"
             MaxHeight="{Binding DesiredSize.Height, RelativeSource={RelativeSource Self}}"
             MinHeight="{Binding DesiredSize.Height, RelativeSource={RelativeSource Self}}"
             MaxWidth="{Binding DesiredSize.Width, RelativeSource={RelativeSource Self}}"
             MinWidth="{Binding DesiredSize.Width, RelativeSource={RelativeSource Self}}" >
    <Canvas>
        <Ellipse Height="50" Width="50" Fill="Black" StrokeThickness="0"/>
    </Canvas>
</UserControl>
